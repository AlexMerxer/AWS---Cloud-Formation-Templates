{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This template creates a IOT service and certificates for the Camera And IAM and its policies",
    "Parameters": {
        "ThingTypeName": {
            "Description": "Thing Type Name",
            "Type": "String",
            "Default": "cctvcamera_1"
        },
        "PolicyName": {
            "Description": "Name of the policy",
            "Type": "String",
            "Default": "KvsPolicy"
        },
        "IOTRoleARN": {
            "Description": "ARN of the role(It differs by the role that we create)",
            "Type": "String",
            "Default": "arn:aws:iam::361691268968:role/IoTRole"
        },
        "IOTPolicyName": {
            "Description": "Name for the IOT policy",
            "Type": "String",
            "Default": "KvsIOTPolicy"
        },
        "ResourceARNForIOTPolicy": {
            "Description": "Resoure ARN for IOT policy(It Differs from policy to policy that we create)",
            "Type": "String",
            "Default": "arn:aws:iot:us-east-1:361691268968:rolealias/MyKVSRoleAlias"
        }
    },
    "Resources": {
        "CameraIOT": {
            "Type": "AWS::IoT::ThingType",
            "Properties": {
                "DeprecateThingType": false,
                "ThingTypeName": {
                    "Ref": "ThingTypeName"
                },
                "ThingTypeProperties": {
                    "ThingTypeDescription": "camera_1 ThingType"
                }
            }
        },
        "CCTVCamera": {
            "Type": "AWS::IoT::Thing",
            "Properties": {
                "ThingName": "IOTcamera1",
                "ThingTypeName": {
                    "Ref": "CameraIOT"
                }
            }
        },
        "MyIAMRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "credentials.iot.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "RoleName": "IoTRole",
                "Description": "Name for the IOT role"
            }
        },
        "MyIAMPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": {
                    "Ref": "PolicyName"
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "kinesisvideo:Describestream",
                                "kinesisvideo:PutMedia",
                                "kinesisvideo:TagStream",
                                "kinesisvideo:GetDataEndpoint"
                            ],
                            "Resource": "arn:aws:kinesisvideo:::stream/${credentials-iot:ThingName}/*"
                        }
                    ]
                },
                "Roles": [
                    {
                        "Ref": "MyIAMRole"
                    }
                ]
            }
        },
        "IOTRoleAlias": {
            "Type": "AWS::IoT::RoleAlias",
            "Properties": {
                "RoleAlias": "MyKVSRoleAlias",
                "RoleArn": {
                    "Ref": "IOTRoleARN"
                },
                "CredentialDurationSeconds": 3600
            }
        },
        "MyIoTPolicy": {
            "Type": "AWS::IoT::Policy",
            "Properties": {
                "PolicyName": {
                    "Ref": "IOTPolicyName"
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": "iot:Connect",
                            "Resource": {
                                "Ref": "ResourceARNForIOTPolicy"
                            }
                        },
                        {
                            "Effect": "Allow",
                            "Action": "iot:AssumeRoleWithCertificate",
                            "Resource": {
                                "Ref": "ResourceARNForIOTPolicy"
                            }
                        }
                    ]
                }
            }
        }
    }
}